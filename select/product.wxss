/* page/material/material.wxss */

.searchBar {
  position: fixed;
  top: 0;
  width: 100%;
  z-index: 11;
}


 .select_box {
   position: relative;
   top: 120rpx;
   display: flex;
 }

 .select {
   width: auto;
   position: fixed;
   height: 1000rpx;
   top: 150rpx;
   display: flex;
   flex-direction: column;
   justify-content: space-around;
 }
 
 .btn {
  padding: 20rpx 0 20rpx 20rpx;
  background-color: #ffffff;
}
 .select_system {
   background-color: #ededed;
 }

 .search_menu {
   position: absolute;
   margin-left: 300rpx;
   /* width: 100%; */
 }

 .project_item {
   width: 100%;
   height: auto;
   background-color: #ffffff;
 }

 .item_wrap {
  display: flex;
  /* justify-content: center; */
  align-items: center;
  position: relative;
 }

 .button .btns {
   position: fixed;
   bottom: 0;
   right: 50%;
   transform: translateX(50%);
   background-color: #42a5f5;
 }

 /* 选择框的修改 */
 checkbox .wx-checkbox-input {
  /* border: 1px solid red; */
  border: none;
  position: absolute;
  top: 0;
  right: 0rpx;
  height: 50rpx;
  width: 50rpx;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  background: #00b26a;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  color: #ffffff;
}

.name_list {
  padding-right: 50rpx;
}


