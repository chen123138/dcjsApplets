/* page/material/material.wxss */

.searchBar {
  position: fixed;
  top: 0;
  width: 100%;
  z-index: 11;
  height: 100rpx;
}

.main {
  display: flex;
  flex-direction: column;
}
.select_box {
  margin-top: 120rpx;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: space-between;
  padding-bottom: 150rpx;
}

.select {
  width: 270rpx;
  display: flex;
  height: 1000rpx;
  flex-direction: column;
  font-size: 30rpx;
}

.btn {
  padding: 20rpx 0 20rpx 20rpx;
  background-color: #ffffff;
  margin-bottom: 5rpx;
}

.select_system {
  background-color: #ededed;
}

.search_menu {
  width: 440rpx;
}

.project_item {
  width: 100%;
  height: auto;
  background-color: #ffffff;
}

.item_wrap {
  display: flex;
  align-items: center;
  position: relative;
}


.button {
  height: 150rpx;
  width: 100%;
  background-color: #ffffff;
  position: fixed;
  bottom: 0;
  right: 50%;
  transform: translateX(50%);
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  box-shadow:5px 2px 6px #000
}

.button .btns {
  position: absolute;
  top: 50%;
  right: 50%;
  transform: translate(50%, -50%);
  background-color: #42a5f5;
  padding: 10rpx 0;
  width: 200rpx;
}

checkbox .wx-checkbox-input {

  border: none;
  position: absolute;
  top: 0;
  right: 0rpx;
  height: 30rpx;
  width: 30rpx;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  background: #00b26a;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  color: #ffffff;
}

.name_list {
  padding-right: 32rpx;
  width: 100%;
}

.brand {
  display: flex;
  justify-content: space-between;
}
