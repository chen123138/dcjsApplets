<!--user/index/index.wxml-->
<view class="all">
	<view class="menu"></view>
	<view class="container1">
		<!-- 信息展示 -->
		<view class="header">
			<view class="userinfo">
				<open-data type="userAvatarUrl" class="userinfo-avatar"></open-data>
				<open-data type="userNickName" class="userinfo-nickname"></open-data>
			</view>
			<!-- 公司 -->
			<view class="companyImg">
				<image src="/images/dachang.png" class="img"></image>
				<!-- 职位 -->
				<text class="name">{{position}}</text>
			</view>
		</view>
	</view>

	<view class="container2">
		<view class="body">
			<view class="button" bindtap="request">我的请购</view>
			<view class="button" bindtap="enquiry">我的询价</view>
			<view class="button" bindtap="order">我的订单</view>
			<view class="button" bindtap="task">我的任务</view>
			<view class="button" bindtap="approve">我的审批</view>
			<view class="button">采购计划</view>
			<!-- <view class="button">材料变更</view> -->

		</view>
	</view>
</view>