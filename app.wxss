/* 列表页面 */

.container .list-item {
    /* width: 690rpx; */
    padding: 20rpx 30rpx 20rpx 30rpx;
    /* margin: 7rpx 0 6rpx 0; */
    background: #fff;
    /* border-top: 1px solid #eee; */
    border-bottom: 1px solid #eee;
    /* box-shadow: 0 2px 5px #eee; */
}

/* .container .list-item .item-wrap {
    padding: 10rpx 0 0 0;
} */

.container .list-item .item-wrap .name {
    color: #45586c;
    /* font-size: 0.938rem; */
    margin-bottom: 0.625rem;
    box-sizing: border-box;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
    word-break: break-all;
}

.container .list-item .info-wrap {
    font-size: 16px;
    position: relative;
    text-align: left;
}

.container .list-item .info-wrap view {
    color: #b0bac5;
    margin-right: 0.625rem;
    display: inline-block;
    vertical-align: top;
}

.container .list-item .info-wrap .workspace {
    width: 45%;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}

.container .list-item .info-wrap .status {
    max-width: 30%;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}

.container .list-item .info-wrap .date {
    position: absolute;
    right: 0;
    margin-right: 0;
    min-width: 25%;
    text-align: right;
}



