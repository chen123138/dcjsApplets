@import '/style/weui.wxss';

.container {
    color: #000;
    padding: 0;
    font-size: 16px;
    min-height: 100%;
    background: #f0f4f3;
}

.btn {
    position: relative;
    display: block;
    width: 184px;
    margin-left: auto;
    margin-right: auto;
    padding: 8px 24px;
    box-sizing: border-box;
    font-weight: 700;    
    text-align: center;
    text-decoration: none;
    color: #fff;
    line-height: 1.41176471;
    border-radius: 4px;
    overflow: hidden;
    -webkit-tap-highlight-color: rgba(0,0,0,0);
}

.no-list {
    width: 100%;
    flex-grow: 1;
    overflow-x: hidden;
    padding-top: 50%;
    /* background-color: white; */
}
.no-list image{
    /* width: 109px;
    height: 139px; */
    display:block;
    margin:auto;
}
.no-list .msg{
    text-align:center;
    display:block;
    margin:auto;
    margin-top:5px;
}

/* 新建&详情 */
.content-wrapper{
    position: relative;
    /* min-height: 1rem; */
    background-color: #fff;
    word-wrap: break-word;
    word-break: break-all;
    height: auto;
    margin: 0;
    vertical-align: middle;
    padding: .7rem .7rem .7rem;
}

.wrapper {
    position: relative;
    min-height: 1rem;
    background-color: #fff;
    word-wrap: break-word;
    word-break: break-all;
    height: 1.75rem;
    /* border-bottom: 1px solid #f4f4f4; */
    vertical-align: middle;
    /* padding: 0.5rem 0.7rem 0.3rem; */
    /* padding: 0.7rem 0.7rem 0.5rem; */
    padding: 20rpx 30rpx 10rpx 30rpx;
    /* background: red; */
    border-bottom: 1px solid #eee;
}

.label {
    position: absolute;
    float: left;
}

.value {
    position: relative;
    float: right;
    /* right: 0.7rem; */
    text-align: right;
    color: #7d7d7d;
    /* width: 60%; */
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.space {
    margin-bottom: 0.5rem;
    padding: 0rem 0.7rem;
    border-top: none;
}

.arrow {
    /* -right: 6rpx; */
    position: relative;
    float: right;    
    /* right: 0.7rem; */
    text-align: right;
    color: #7d7d7d;
    white-space: nowrap;
    /* overflow: hidden; */
    text-overflow: ellipsis;
}

.arrow:after {
    content: "  ";
    display: inline-block;
    height: 18rpx;
