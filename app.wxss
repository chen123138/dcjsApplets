@import '/style/weui.wxss';

.container {
  background-color: #ededed;
  width: 100%;
  height: 100%;
  font-size: 32rpx;
}

.container:before {   
  content: "";   
  display: block;   
  width: 100%;   
  height: 100vh;
  position: fixed;
  background-color: #ededed;
  top: 0;
  left: 0;
  z-index: -1;
}  

.list_item {
  height: 100%;
  width: auto;
  background-color: #ffffff;
  padding: 32rpx 0;
}

.list_item_title {
  margin-left: 32rpx;
  font-size: 34rpx;
}

.list_item_body {
  display: flex;
  justify-content: space-between;
  font-size: 32rpx;
  color: #8c8c8c;
  margin: 0 32rpx;
}

.space {
  height: 20rpx;
  width: 100%;
}

.padding {
  padding: 0 32rpx;
}


