.box_items {
  padding-top: 5rpx;
  margin-bottom: 5rpx;
}


.buttons {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 60rpx;
  justify-content: space-around;
  text-align: center;
  margin-top: 100rpx;
}


.info_code {
  font-size: 54rpx;
  background-color: #ffffff;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.info_product_code {
  font-size: 40rpx;
  background-color: #ffffff;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.info_receive {
  display: flex;
  background-color: #ffffff;
  justify-content: space-between;
  line-height: 2em;
}

.info_enquiry {
  background-color: #ffffff;
}

.info_padding1 {
  padding: 0 .75em;

}

.info_enquiry image {
  height: 50rpx;
  width: 50rpx;
  margin-right: 20rpx;
}

.info_enquiry_padding {
  font-size: 32rpx;
  padding: 0 48rpx;

}

.info_padding {
  padding: 0 54rpx;

}

.info_product {
  font-size: 40rpx;
  background-color: #ffffff;

}

.info_left {
  flex-wrap: nowrap;
  float: left;
}

.info_right {
  flex-wrap: nowrap;
  float: right;
}

.state_name {
  color: #919a9f;
  display: flex;
  justify-content: space-between;
  align-items: center;
}


.progess-bar {
  height: 70rpx;
}

.ball {
  width: 20px;
  height: 20px;
  border-radius: 10px;
  margin-left: 20px;
}

.progress {
  width: 2px;
  height: 30rpx;
  margin-left: 29px;
}

.detail {
  margin-left: 40px;
  width: 100%;
  float: left;
  color: #212121;
  position: relative;
  top: -20px;
  left: 5px;
}

.flow-detail {
  margin: 2px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.flow-detail-name {
  margin: 2px;
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.active {
  background-color: #FF5722
}

.negative {
  background-color: #9F9F9F
}

.space1 {
  background-color: #ffffff;
  height: 20rpx;
  width: 100%;

}

.show-btn {
  margin-top: 100rpx;
  color: #22cc22;
}

.modal-mask {
  width: 750rpx;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 540rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  transform: translateY(-50%);
  left: 0;
  z-index: 9999;
  background: #fff;
  margin: -180rpx 105rpx;
  border-radius: 30rpx;
  /* height: 40%; */
  display: flex;
  flex-direction: column;
  justify-content: space-around;

}

.modal-title {
  padding-top: 50rpx;
  font-size: 36rpx;
  color: #030303;
  text-align: center;
}

.modal-content {
  padding: 50rpx 32rpx;
}

.modal-input {
  display: flex;
  background: #fff;
  border-bottom: 2rpx solid #ddd;
  border-radius: 4rpx;
  font-size: 28rpx;
}

.input {
  width: 100%;
  height: 82rpx;
  font-size: 28rpx;
  line-height: 28rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  color: #333;
  margin-top: 20rpx;
}

input-holder {
  color: #666;
  font-size: 28rpx;
}

.img {
  color: #666;
  font-size: 28rpx;
  padding: 0 20rpx;
}

.q-image {
  height: 150rpx;
  width: 150rpx;
  border: 2px solid #595959;
  margin: 20rpx;
}

.modal-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  border-top: 1px solid #dedede;
  font-size: 34rpx;
  line-height: 86rpx;
  margin-top: 30rpx;
}

.btn-cancel {
  width: 50%;
  color: #666;
  text-align: center;
  border-right: 1px solid #dedede;
}

.btn-confirm {
  width: 50%;
  color: #ec5300;
  text-align: center;
}