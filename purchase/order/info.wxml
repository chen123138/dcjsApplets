<!--purchase/order_details/index.wxml-->

<!-- 进度条 -->

<view class="details_container">

	<view class='order_process'>
		<view class='process_wrap' wx:for="{{processData}}" wx:key="item">
			<view class='process'>
				<view class='process_line' style="background:{{item.start}}"></view>
				<image class='process_icon' src="{{item.icon}}"></image>
				<view class='process_line' style="background:{{item.end}}"></view>
			</view>
			<text class='process_name'>{{item.name}}</text>
		</view>
	</view>

	<!-- 供应商信息 -->
	<view class='box_title margin'>项目编号: {{order_list[0].code}}</view>
	<view class="box">
		<view class="box_items">所属项目: {{order_list[0].project_id[1]}}</view>
		<view class="box_items">收货人员：{{order_list[0].receive_user}}</view>
		<view class="box_items">联系电话：{{order_list[0].receive_phone}}</view>
		<view class="box_items">收货地址：{{order_list[0].receive_address}}</view>
		<view class="box_items">供应商：{{order_list[0].partner_id[1]}}</view>
		<view class="box_items">订单人员：{{order_list[0].user_id[1]}}</view>
	</view>
	<view class='box_title'>材料信息</view>
	<block wx:for="{{project_order_product_list}}" wx:key="item">
		<view class="box">
			<view class="box_items">系统: {{item.project_system_id[1]}}</view>
			<view class="box_items">材料: {{item.project_product_id[1]}}</view>
			<view class="box_items">品牌: {{item.brand}}</view>
			<view class="box_items">型号: {{item.type}}</view>
			<view class="box_items">数量: {{item.number}}</view>
			<view class="box_items">单位: {{item.uom_id}}</view>
			<view class="box_items">包装: {{item.pack}}</view>
			<view class="box_items">时间: {{item.date}}</view>
			<view class="box_items">单价: {{item.price}}</view>
			<view class="box_items">小计: {{item.subtotal}}</view>
			<view class="box_items">备注: {{item.remarks}}</view>
		</view>
	</block>
	<button class="btn" type="primary" bindtap="goPay">确认</button>
	<!-- <button class="btn" type="primary" wx:if="{{i(sCreated == 1 || order_list[0].code == 1)}}" bindtap="goPay">确认</button> -->
</view>