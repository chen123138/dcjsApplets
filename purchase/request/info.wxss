/* purchase/list_detaial/index.wxss */

.product {
  height: auto;
  width: auto;
  background-color: #fff;
  /* margin: 20rpx; */
  border-radius: 20rpx;
  position: relative;
}

.product_title {
  color: #919a9f;
}

.left_title {
  font-size: 40rpx;
  color: #919a9f;
  /* margin-left: 40rpx; */
  margin-bottom: 10rpx;
}

.right_title {
  font-size: 32rpx;
  /* margin-left: 80rpx; */
  display: flex;
  flex-direction: column;
}

.right_title  text {
  margin-bottom: 10rpx;
}

.product_main {
  color: #919a9f;
  height: 50%;
  width: 100%;
}

.product_main .input {
  display: flex;
  /* margin-left: 80rpx; */
}

.product_main .input input {
  margin-bottom: 10rpx;
  margin-left: 20rpx;
}

.product_container {
  width: 100%;
  height: 100%;
  margin-bottom: 110rpx;
  padding-bottom: 20rpx;
}

.btnContainer {
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.btnContainer button {
  background-color: #40e0d0;
  color: #fff;
}

.box_title {
  margin-left: 40rpx;
  margin-bottom: 20rpx;
  margin-top: 20rpx;
  color: black;
  font-size: 40rpx;
  display: flex;
  text-align: center;
}

.box_title image {
  height: 50rpx;
  width: 50rpx;
  margin-right: 20rpx;
}

.box {
  margin-top: 10rpx;
  padding-left: 40rpx;
}

.approval_container {
  width: 100%;
  height: 100%;
  display: flex;
  /* justify-content: space-between; */
  align-items: center;
  position: relative;
}

.box_items {
  padding-top: 5rpx;
  margin-bottom: 5rpx;
}

.new {
  padding: 0;
  height: 160rpx;
}

.square image {
  height: 80rpx;
  width: 80rpx;
  border-radius: 50%;
  margin-left: 40rpx;
  margin-right: 30rpx;
}

.img image{
  height: 30rpx;
  width: 30rpx;
  border-radius: 50%;
  position: absolute;
  top: -15rpx;
  right: -15rpx;
}


.approval_name {
  margin-right: 60rpx;
  height: auto;
  display: flex;
}

.new .box_items {
  width: 100%;
  height: 100%;
}

.new view {
  margin-bottom: 0
}

.approval_name .name {
  padding: 15rpx 20rpx;
  border-radius: 10rpx;
  border: 1rpx solid burlywood;
  position: relative;
}

.mean {
  font-size: 25rpx;
  position: absolute;
  top: 20rpx;
  right: 30rpx;
}

.fj {
  position: absolute;
  height: 40rpx;
  width: 40rpx;
  bottom: -10rpx;
}
.xt {
  position: absolute;
  height: 150rpx;
  width: 20rpx;
  left: 10rpx;
  top: 0;
}

.buttons {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 60rpx;
  justify-content: space-around;
  text-align: center;
  margin-top: 100rpx;
}





