<!--application/index.wxml-->
<view class="container">
	<form catchsubmit="formSubmit">
		<view class="check_container padding">
			<view class="check_title">请购信息</view>
			<view class="check_body">
				<view class="check_label">{{project_name}}</view>
				<view class="wrapper">
					<view class="value">
						<radio-group class="radio-group" bindchange="bindRadioChange">
							<label class="radio" wx:for="{{cates}}" wx:key="item">
								<radio value="{{item.value}}" checked="{{item.checked}}" />{{item.lable}}
							</label>
						</radio-group>
					</view>
				</view>
			</view>
		</view>
		<view class="space"></view>


		<!-- 收货信息 -->
		<view class="weui-cells__title">收货信息</view>
		<view class="Receipt_box ">
			<!--  -->
			<view class="weui-cell weui-cell_active weui-cell_input weui-cell_input-after">
				<view class="weui-cell__bd">
					<view class="weui-label">收货人</view>
				</view>
				<view class="weui-cell__ft">
					<view class="weui-input" style="width:auto;">
						<input placeholder="请输入" bindinput='user' />
					</view>
				</view>
			</view>
			<!--  -->
			<view class="weui-cell weui-cell_active weui-cell_input weui-cell_input-after">
				<view class="weui-cell__bd">
					<view class="weui-label">收货电话</view>
				</view>
				<view class="weui-cell__ft">
					<view class="weui-input" style="width:auto;">
						<input placeholder="请输入" bindinput='phone' type="number"/>
					</view>
				</view>
			</view>
			<!--  -->
			<view class="weui-cell">
				<view class="weui-cell__bd">
					<input class="weui-input" bindinput="house" placeholder="请填写收货地址" />
				</view>
			</view>
			<!--  -->
			<view class="weui-cell weui-cell_active">
				<view class="weui-cell__bd">
					<textarea class="weui-textarea" placeholder="备注" style="height: 3.3em" data-tag="content" bindblur='remarks' />
					<view class="weui-textarea-counter">200</view>
      </view>
			</view>
			<!--  -->
		</view>


		<!-- 材料详情 -->
		<view class="weui-cells__title">材料明细</view>
		<block wx:for="{{list}}" wx:key="item.index">
			<view class="product padding cells">
				<image class="cancel" bindtap="cancel" data-index="{{index}}" src="/images/cancel.png"></image>
				<view class="product_title">
					<view class="left_title">
						<!-- 产品 -->
						<text>{{item.project_system_id[1]}}-{{item.name}}</text>
						<view class="space"></view>
						<view class="right_title">
							<view class='brand'>
								<!--品牌  -->
								<view class="input">
									<input placeholder="品牌" data-index="{{index}}" style="  text-align: center;" class="Underscore" bindblur='bindBlurBrand'></input>
								</view>
								<!-- 类型 -->
								<view class="input">
									<input placeholder="型号" data-index="{{index}}" style="  text-align: center;" class="Underscore" bindblur='bindBlurType'></input>
								</view>
							</view>
						</view>
						<view class="space"></view>
						<view class="right_title">
							<view class='brand'>
								<!-- 数量 -->
						<view class="input">
							<input type='number' value="1" class="Underscore" style="  text-align: center;" data-index="{{index}}" bindblur='bindBlur'></input>{{item.uom_id[1]}}
						</view>
								<!-- 包装 -->
						<view class="input">
							<input class="Underscore" value="{{item.uom_id[1]}}" style="text-align: center;" data-index="{{index}}" bindblur='bindBlurPack'></input>
						</view>
							</view>
						</view>
					</view>
					<view class="product_main">
						<view class="space"></view>
						<!-- 到货时间 -->
						<picker mode="date" value="{{date}}" data-index="{{index}}" style="  text-align: center;"start="2020-07-02" end="2020-12-31" bindchange="bindDateChangeDate">
							<view class="picker">
							<text style="  text-align: center;">{{item.date == undefind?'时间':item.date}}</text>
								
							</view>
						</picker>
					</view>
				</view>
			</view>
			<view class="space"></view>
		</block>

			<view class="buttons">
				<!-- <button type="warn" size="mini" bindtap="Save">保存</button> -->
				<button class="check_button" bindtap='Submit'>提交</button>
			</view>
	</form>
</view>