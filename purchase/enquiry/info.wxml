	<block wx:for="{{approval}}" wx:key="item">
		<view class="info_code padding">
			<view>{{item.code}}</view>
			<view style="float:right; font-size: 32rpx;" wx:if="{{item.state=='-1'}}">已取消</view>
			<view style="float:right; font-size: 32rpx;" wx:if="{{item.state=='0'}}">起稿中</view>
			<view style="float:right; font-size: 32rpx;" wx:if="{{item.state=='1'}}">审批中</view>
			<view style="float:right; font-size: 32rpx;" wx:if="{{item.state=='2'}}">询价单</view>
		</view>
		<view class="info_product_code padding">
			<view>{{item.display_name}}</view>
			<view style="float:right; font-size: 32rpx;" wx:if="{{item.buy_mode == 1}}">委托采购</view>
			<view style="float:right; font-size: 32rpx;" wx:if="{{item.buy_mode == 2}}">现场采购</view>
		</view>
	</block>

	<!-- 收获信息 -->
	<view>
		<view class="weui-cells__title">收货信息</view>
		<view class="weui-cells weui-cells_after-title">
			<view class="weui-cell">
				<view class="weui-cell__bd">收货人</view>
				<view class="weui-cell__ft">{{approval[0].receive_user}}</view>
			</view>
			<view class="weui-cell">
				<view class="weui-cell__bd">收货电话</view>
				<view class="weui-cell__ft">{{approval[0].receive_phone}}</view>
			</view>
			<view class="weui-cell">
				<view class="weui-cell__bd">收货地址</view>
				<view class="weui-cell__ft">{{approval[0].receive_address}}</view>
			</view>
			<view class="weui-cell">
				<view class="weui-cell__bd">备注</view>
				<view class="weui-cell__ft">{{approval[0].remarks}}</view>
			</view>
		</view>
	</view>


	<!-- 审批状态 -->

	<!-- 审批流程 -->
	<view>
		<view class="weui-cells__title">审批流程</view>
		<view class="info_enquiry ">
			<view class="info_enquiry_padding">直接上级</view>
			<view class="space"></view>
			<block wx:for="{{approval_state}}" wx:key="item">
				<view class='approval_container'>
					<!-- 					流程线 -->
					<view class="progess-bar">
						<view class="ball active">
						</view>
						<view class="detail">
							<!-- 名字 -->
							<view class="flow-detail-name">
								<view class="approval_user">{{item.user_id[1]}}</view>
								<view class="approval_create_green" wx:if="{{item.state == '1'}}">已通过{{item.create_date}}</view>
								<view class="approval_create_red" wx:if="{{item.state == '2'}}">已驳回{{item.create_date}}</view>
								<view wx:if="{{(item.state == '0')}}">
									<button class="buttons_mini" size="mini" style="line-height: 1;" wx:if="{{(item.state == '0')&&(item.act_button=='Y')}}" type="primary" bindtap="ApprovalConfirm">同意</button>
									<button class="buttons_mini" size="mini" style="line-height: 1;" type="warn" wx:if="{{(item.state == '0')&&(item.act_button=='Y') }}" bindtap="ApprovalReject">驳回</button>
								</view>
							</view>
						</view>
						<view class="progress active"></view>
					</view>
				</view>
			</block>
			<!--     可见抄送 -->
			<view class="info_enquiry_padding">抄送人

			</view>
			<view class="space"></view>
			<block wx:for="{{approval_visible}}" wx:key="item">
				<view class='approval_container'>
					<!-- 					流程线 -->
					<view class="progess-bar">
						<view class="ball active"></view>
						<view class="detail">
							<!-- 名字 -->
							<view class="flow-detail-name ">
								<view class="approval_user">{{item.user_id[1]}}</view>
								<view class="approval_create_grey">{{item.create_date}}</view>
							</view>
						</view>
						<view class="progress active">
						</view>
					</view>
				</view>

			</block>

		</view>
	</view>

	<!-- 材料明细 -->
	<view>
		<view class="weui-cells__title">材料明细</view>

		<block wx:for="{{approval_product}}" wx:key="item">
			<view class="weui-cells weui-cells_after-title">
				<view class="product_cells_container">
					<view class="info_receive">
						<text>{{item.project_system_id[1]}}-{{item.project_product_id[1]}}</text>
					</view>
					<!--品牌  -->
					<view class="info_receive ">
						<text > {{item.brand}}</text>
						<!-- 规格 -->
						<text >{{item.type}}</text>
					</view>
					<view class="info_receive ">
						<!-- 数量 -->
						<view>{{item.number}} {{item.uom_id[1]}}</view>
						<!-- 评论 -->
						<view>{{item.remarks}}</view>
					</view>
				</view>
			</view>
		</block>
		<view class="space"></view>
	</view>


	<view class="buttons" wx:if="{{approval[0].state !== '2' && approval[0].state !== '3'}}">
		<button type="warn" wx:if="{{approval[0].state !== '3'}}" bindtap="cancel">取消</button>
	</view>
	<view class="buttons" wx:if="{{approval[0].state == '0'}}">
		<button type="warn" bindtap="submit">提交</button>
	</view>

</view>