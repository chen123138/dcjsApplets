<!--enquiry/index.wxml-->
<!--purchase/list_detaial/index.wxml-->
<view  class="page">
 <block  wx:for="{{approval}}" wx:key="item" >
    <view class='box_title'>
			<image src="/images/基础信息.png"></image>基础信息
		</view>
    <!-- 询价信息 -->
    <view wx:for="{{approval}}" wx:key="item" class="box">
        <view class="weui-cell__bd">询价编号: {{item.code}} </view>
        <view class="weui-cell__bd">询价时间: {{item.create_date}} </view>
        <view class="weui-cell__bd">询价项目: {{item.project_id[1]}} </view>
        <view class="weui-cell__bd" >询价人员: {{item.receive_user}} </view>
        <view class="weui-cell__bd">联系方式：{{item.receive_phone}}</view>
      <!-- 采购方式 -->
        <view class="weui-cell__bd" wx:if="{{item.buy_mode == 1}}">采购状态：委托采购</view>
        <view class="weui-cell__bd" wx:if="{{item.buy_mode == 2}}">采购状态：现场采购</view>

        <view class="weui-cell__bd">联系地址: </view>
        <view class="weui-cell__bd" style="margin-left: 50rpx">{{item.receive_address}}</view>
        <view class="weui-cell__bd" wx:if="{{item.remarks==false}}">备注: 无</view>
        <view class="weui-cell__bd" wx:else>备注: {{item.remarks}}</view>
    </view>

  </block>
  	<view class='box_title'>
		<image src="/images/材料.png"></image>材料明细
	</view>

	<block wx:for="{{approval_product}}" wx:key="item">
		<!-- 材料明细 -->
		<view class='box'>

			<view class='weui-cell__bd'>
				
					<view class="weui-cell__bd">
						<view class="left_title">
							<!--  -->
							<text>{{item.project_product_id[1]}}</text>
						</view>
						<view class="right_title">
							<!-- 系统 -->
							<text>系统: {{item.project_system_id[1]}}</text>
							<!--品牌  -->
							<text>品牌: {{item.brand}}</text>
							<!-- 规格 -->
							<text>规格: {{item.type}}</text>
						</view>
					</view>
					<view class="product_main">
						<!-- 到货时间 -->
						<view class="input">到货时间: {{item.date}}</view>
						<!-- 数量 -->
						<view class="input">数量: {{item.number}} {{item.uom_id[1]}}</view>
					</view>
				</view>
		
		</view>
	</block>
 
    <!-- 审批状态 -->
	<view class='box_title'>
		<image src="/images/审批流程.png"></image>审批流程
	</view>


	<block wx:for="{{approval_state}}" wx:key="item">
		<view class='weui-cell weui-cell_example'>
			<view class='weui-cell__bd'>
				<!-- 进度条 -->
				<view class='approval_container'>
					
					<view class='weui-cell__hd'>
						<image src='/images/maner.png' style="margin-right: 16px;vertical-align: middle;width:20px; height: 20px;"></image>
					</view>
					<view class='approval_name'>
						<view class='name'>
							{{item.user_id[1]}}
							<view class='img' wx:if="{{item.state == '1'}}">
								<image src='/images/adopt.png'></image>
							</view>
							<view class='img' wx:if="{{item.state == '2'}}">
								<image src='/images/reject.png'></image>
							</view>
						</view>
					</view>
					<view class='mean'>
						<view class='state_name' wx:if="{{item.state == '0'}}">未审核</view>
						<view class='state_name' wx:if="{{item.state == '1'}}">已通过</view>
						<view class='state_name' wx:if="{{item.state == '2'}}">已驳回</view>
					</view>
				</view>
			</view>
		</view>
	</block>

<!--     可见抄送 -->  

	<view class='box_title'>
		<image src="/images/抄送.png"></image>抄送
	</view>
	<block wx:for="{{approval_visible}}" wx:key="item">
	  <view class='weui-cell weui-cell_example'>
		<view class='weui-cell__bd'>
			<view class='approval_container'>
				<view class='weui-cell__hd'>
					<image src='/images/maner.png' style="margin-right: 16px;vertical-align: middle;width:20px; height: 20px;"></image>
				</view>
				<view class='approval_name'>
					<view class='name'>
						{{item.user_id[1]}}
					</view>
				</view>
			</view>
		</view>
	</view>
	</block>

	<!-- 提交按钮 -->
	<view class="button-sp-area" wx:for="{{approval_state}}" wx:key="item" wx:if="{{!(item.state == '-1')&&(item.act_button=='Y')}}"> 
		    <button class="weui-btn weui-btn_mini weui-btn_primary"  wx:if="{{item.state == '0'}}" type="primary" bindtap="ApprovalConfirm">同意</button>
		    <button class="weui-btn weui-btn_mini weui-btn_primary"  type="warn" wx:if="{{item.state == '0' }}"  bindtap="ApprovalReject">驳回</button>
		    <button class="weui-btn weui-btn_mini weui-btn_primary"  type="warn" bindtap="cancel">取消订单</button>
	</view>

</view>

