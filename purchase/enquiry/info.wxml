<!--enquiry/index.wxml-->
<!--purchase/list_detaial/index.wxml-->
<view  class="container">
 <block  wx:for="{{approval}}" wx:key="item" >
    <view class="info_code,padding"  >{{item.code}}</view>
		<view class="info_product_code,padding" >{{item.display_name}}</view>
    <!-- 询价信息 -->
	</block>
<view class="space"></view>
<block>
    <view wx:for="{{approval}}" wx:key="item" class="info_receive padding">
        <view class="into_left">{{item.receive_user}}</view>
				<view class="into_right">{{item.receive_phone}}</view>
		</view>	
		<view wx:for="{{approval}}" wx:key="item" class="info_receive padding">
        <view class="weui-uploader__title">{{item.receive_address}}</view>
		</view>
		<view wx:for="{{approval}}" wx:key="item" class="info_receive padding">
        <view class="weui-cell__bd" wx:if="{{item.remarks==false}}">备注: 无</view>
        <view class="weui-cell__bd" wx:else>备注: {{item.remarks}}</view> 

      <!-- 采购方式 -->
<!--         <view class="weui-cell__bd" wx:if="{{item.buy_mode == 1}}">采购状态：委托采购</view>
        <view class="weui-cell__bd" wx:if="{{item.buy_mode == 2}}">采购状态：现场采购</view> -->
    </view>


  </block>

<view class="space"></view>
 
 
    <!-- 审批状态 -->

	<view class='info_padding1'>审批流程</view>

<view class="info_enquiry padding" >
	<view class="info_enquiry_padding">直接上级</view>
	<block wx:for="{{approval_state}}" wx:key="item">
		<view class="weui-cells weui-cells_after-title info_padding">
			<view class="weui-cell weui-cell_example">
				<!-- 进度条 -->
				<view class='approval_container'>
					
					<view class='weui-cell__hd'>
						<image src='/images/maner.png' style="margin-right: 16px;vertical-align: middle;width:20px; height: 20px;"></image>
					</view>
					<view class="weui-cell__bd">
						<view class='name'>
							{{item.user_id[1]}}
							<view class='img' wx:if="{{item.state == '1'}}">
								<image src='/images/adopt.png'></image>
							</view>
							<view class='img' wx:if="{{item.state == '2'}}">
								<image src='/images/reject.png'></image>
							</view>
						</view>
					</view>
					<view class='mean'>
						<view class='state_name' wx:if="{{item.state == '0'}}">未审核</view>
						<view class='state_name' wx:if="{{item.state == '1'}}">已通过</view>
						<view class='state_name' wx:if="{{item.state == '2'}}">已驳回</view>
					</view>
				</view>
			</view>
		</view>
	</block>

<!--     可见抄送 -->  

	<view class="info_enquiry_padding">抄送人
	</view>

	<block wx:for="{{approval_visible}}" wx:key="item">
	  <view class="weui-cells weui-cells_after-title info_padding">
		<view class="weui-cell weui-cell_example">
			<view class='approval_container'>
				<view class='weui-cell__hd'>
					<image src='/images/maner.png' style="margin-right: 16px;vertical-align: middle;width:20px; height: 20px;"></image>
				</view>
				<view class="weui-cell__bd">
					<view class='name'>
						{{item.user_id[1]}}
					</view>
				</view>
			</view>
		</view>
	</view>
	</block>

	<!-- 提交按钮 -->
	<view class="button-sp-area" wx:for="{{approval_state}}" wx:key="item" wx:if="{{!(item.state == '-1')&&(item.act_button=='Y')}}"> 
		    <button class="weui-btn weui-btn_mini weui-btn_primary" size="mini" wx:if="{{item.state == '0'}}" type="primary" bindtap="ApprovalConfirm">同意</button>
		    <button class="weui-btn weui-btn_mini weui-btn_default" size="mini" type="warn" wx:if="{{item.state == '0' }}"  bindtap="ApprovalReject">驳回</button>
		    <button class="weui-btn weui-btn_mini weui-btn_warn" size="mini" style="float:right" type="warn" bindtap="cancel">取消订单</button>
	</view>
</view>

<view class="space"></view>


 	<view class='info_padding1'>材料明细
	</view>


<block wx:for="{{approval_product}}" wx:key="item">
		<!-- 材料明细 -->

						<view class="info_product_code,padding">
							<text>{{item.project_product_id[1]}}</text>
							</view>
							<!--品牌  -->
							<view class="info_receive padding">
							<text >品牌: {{item.brand}}</text>
							<!-- 规格 -->
							<text >规格: {{item.type}}</text>
							</view>
						<!-- 到货时间 -->
						<view class="info_receive padding">
						<view >到货时间: {{item.date}}</view>
						<!-- 数量 -->
						<view >数量: {{item.number}} {{item.uom_id[1]}}</view>
					</view>


	</block>


</view>

