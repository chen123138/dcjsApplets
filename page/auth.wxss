/**index.wxss**/
.userinfo {
  height: 100vh;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background: white;
}

.logo {
  height: 200rpx;
  width: 200rpx;
  border-radius: 100rpx;
  margin: 50rpx 0;
}

.text_box {
  margin: 0 50rpx;
  margin-bottom: 50rpx;
}


.main {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 0 40rpx;
  width: 80vw;
  height: 80rpx;
  color: blue;
}

.tip {
  color: rgb(73,73,73);
  font-size: small;
  margin-top: 50rpx;
  margin-bottom: 20rpx;
}
.button {
  background-color: rgb(66,165,245);

}


