.title-wrapper {
    position: relative;
    padding: .7rem .7rem .2rem;
    word-break: break-all;
    background-color: #fff;
}

.title-wrapper .name {
    font-size: 17px;
    font-weight: 700;
    line-height: 1.8;
    display: block;
    overflow: hidden;
    box-sizing: border-box;
    width: 100%;
    height: auto;
    margin: 0;
    padding: 0;
    resize: none;
    -webkit-transition: height .3s ease-in-out;
    transition: height .3s ease-in-out;
    word-wrap: break-word;
    word-break: break-all;
    color: #212121;
    border: none;
}

.wrapper, .content-wrapper {
    margin: 0 40rpx;
    border-radius: 20rpx;
}
button {
    padding: auto;
}
